<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilerggg"
        android:layout_width="32.50dp"
        android:layout_height="32.50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13.00dp"
        android:layout_marginLeft="13.00dp"
        android:layout_marginTop="13.00dp"
        android:layout_marginEnd="13.00dp"
        android:layout_marginRight="13.00dp"
        android:layout_marginBottom="13.00dp"
        android:src="@drawable/photocamera" />

    <TextView
        android:id="@+id/msgsendertyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6.50dp"
        android:layout_marginTop="6.50dp"
        android:layout_marginEnd="1.30dp"
        android:layout_marginBottom="6.50dp"
        android:layout_toLeftOf="@id/profilerggg"
        android:background="@drawable/sender_shape"
        android:fontFamily="@font/poppins_regular"
        android:padding="9.10dp"
        android:text="aysuhvish"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>